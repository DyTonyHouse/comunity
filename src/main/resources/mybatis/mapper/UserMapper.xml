<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.maurice.community.mapper.comunity.UserMapper">
    <resultMap id="User-r" type="com.maurice.community.entity.User">
        <result column="id" property="id"/>
        <result column="access_id" property="accessId"/>
        <result column="name" property="name"/>
        <result column="token" property="token"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_modified" property="gmtModified"/>
        <result column="avatar_url" property="avatarUrl"/>
    </resultMap>

    <insert id="insertUser" parameterType="com.maurice.community.entity.User">
        insert into user (access_id, name, token, gmt_create, gmt_modified, avatar_url)
        values (
          #{accessId},
          #{name},
          #{token},
          #{gmtCreate},
          #{gmtModified},
          #{avatarUrl}
        )
    </insert>

    <select id="findBytoken" parameterType="java.lang.String" resultMap="User-r">
        select access_id, name, token, gmt_create, gmt_modified, avatar_url
        from user
        where token = #{token}
    </select>

    <select id="findByAccessId" parameterType="java.lang.String" resultMap="User-r">
        select id, access_id, name, token, gmt_create, gmt_modified, avatar_url
        from user
        where access_id = #{userId}
        order by id desc limit 0,1
    </select>
</mapper>
